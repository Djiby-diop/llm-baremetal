*.bin filter=lfs diff=lfs merge=lfs -text
*.img filter=lfs diff=lfs merge=lfs -text
*.efi filter=lfs diff=lfs merge=lfs -text

# tokenizer.bin is intentionally stored directly in git (small, required at runtime)
tokenizer.bin -filter -diff -merge -text

# Keep bash scripts usable from WSL/Linux
*.sh text eol=lf

# PowerShell scripts are typically CRLF on Windows
*.ps1 text eol=crlf
